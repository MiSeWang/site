<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mrlv.api.dao.SysUserMapper" >
    <resultMap id="sysUserListVO" type="com.mrlv.api.vo.SysUserListVO">
        <id column="id" property="id"/>
        <result column="login_name" property="loginName"/>
        <result column="name" property="name"/>
        <result column="password" property="password" />
        <result column="gender" property="gender"/>
        <result column="email" property="email"/>
        <result column="phone" property="phone"/>
        <result column="avatar" property="avatar"/>
        <result column="login_flag" property="loginFlag"/>
        <result column="create_date" property="createDate"/>
        <result column="update_date" property="updateDate"/>
        <result column="remarks" property="remarks"/>
        <result column="login_ip" property="loginIp"/>
        <collection property="roles" ofType="com.mrlv.api.entity.SysRole">
            <result column="roleId" property="id"/>
            <result column="roleName" property="name"/>
        </collection>
    </resultMap>

    <select id="queryUsers" resultMap="sysUserListVO">
        SELECT
            u.id,
            u.login_name,
            u.`password`,
            u. NAME,
            u.gender,
            u.email,
            u.phone,
            u.avatar,
            u.login_flag,
            u.create_date,
            u.update_date,
            u.remarks,
            u.login_ip,
            r.id roleId,
            r. NAME roleName
        FROM
            sys_user u
        LEFT JOIN sys_user_role ur ON u.id = ur.user_id
        LEFT JOIN sys_role r ON ur.role_id = r.id
        AND r.del_flag = 1
        AND r.useable = 1
        WHERE
            u.del_flag = 1
    </select>
</mapper>